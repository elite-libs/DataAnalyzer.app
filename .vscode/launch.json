{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "name": "jest-all-tests",
      "request": "launch",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/react-app-rewired",
      "args": ["test", "--env=jsdom", "--runInBand"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "protocol": "inspector",
      "internalConsoleOptions": "neverOpen",
      "disableOptimisticBPs": true
    },
    {
      "type": "node",
      "name": "jest-single-file",
      "request": "launch",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/react-app-rewired",
      "args": [
        "test",
        "--env=jsdom",
        "--runInBand",
        "--runTestsByPath",
        "src/schema-analyzer/__tests__/nested-objects.test.tsx"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "protocol": "inspector",
      "internalConsoleOptions": "neverOpen",
      "disableOptimisticBPs": true
    },
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "Launch Program",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/src/schema-analyzer/index.tsx",
      "outFiles": ["${workspaceFolder}/**/*.js"]
    }
  ]
}
